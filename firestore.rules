rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    //Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }
    
    function getUserRole() {
       return get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role;
    }

    function isSuperAdmin() {
      return isSignedIn() && getUserRole() == 'super_admin';
    }

    // users
    match /users/{userId} {
      allow read: if isSignedIn() && request.auth.uid == userId;
      allow read: if isSuperAdmin();
      
      // CRITICAL: Allow user to create their own profile
      allow create: if isSignedIn() && request.auth.uid == userId;
      
      allow update: if isSignedIn() && request.auth.uid == userId;
      allow update: if isSuperAdmin();
    }
    
    // centers
    match /centers/{centerId} {
      allow read: if true;
      
      // CRITICAL: Allow user to create center with their own UID
      allow create: if isSignedIn() && request.auth.uid == centerId;
      
      allow update: if isSignedIn() && request.auth.uid == centerId;
      allow update: if isSuperAdmin();
    }
    
    // teachers - subcollection under centers
    match /centers/{centerId}/teachers/{teacherId} {
      // Public can read teachers (for public center pages)
      allow read: if true;
      
      // Center admin can manage their own teachers
      allow write: if isSignedIn() && request.auth.uid == centerId;
      
      // Super admin has full access
      allow write: if isSuperAdmin();
    }
    
    // sessions - subcollection under centers
    match /centers/{centerId}/sessions/{sessionId} {
      // Public can read sessions (for public center pages)
      allow read: if true;
      
      // Center admin can manage their own sessions
      allow write: if isSignedIn() && request.auth.uid == centerId;
      
      // Super admin has full access
      allow write: if isSuperAdmin();
    }
    
    // payments - top-level collection
    match /payments/{paymentId} {
      // Super admin can read and create payment records
      allow read, create: if isSuperAdmin();
      
      // Center admin can read their own payment records
      allow read: if isSignedIn() && resource.data.centerId == request.auth.uid;
    }
    
    // invitations
    match /invitations/{invitationId} {
      allow read: if isSuperAdmin();
      allow read: if isSignedIn() && resource.data.email == request.auth.token.email;
      
      allow create: if isSuperAdmin();
      allow update: if isSuperAdmin();
      allow update: if isSignedIn() && resource.data.email == request.auth.token.email;
    }
  }
}
